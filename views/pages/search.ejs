<!DOCTYPE html>
<html>

<head>
    <%- include('../partials/head'); %>
</head>
</head>

<body>
    <header>
        <%- include('../partials/header'); %>
    </header>
    <div class="container col-sm-12" id="mainform">
        <div id="signupbox" style=" margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-body">
                    <form class="form-horizontal" role="form" method="post" action="filter">
                        <div class="form-group">
                            <label for="category" class="col-md-3 control-label">Sort/Search</label>
                            <div class="col-md-9">
                                <select id="category" name="category" class="form-control">
                                    <% for (var i = 0; i < category.length; i++) { %>
                                    <option value=<%-category[i].type%>><%-category[i].type.toUpperCase()%></option>
                                    <% } %>
                                    <option value="mlength">DURATION</option>
                                    <option value="releasedt">RELEASE DATE</option>
                                </select>

                            </div>
                        </div>
                        <div class="form-group">
                            <!-- Button -->
                            <div class="col-md-offset-3 col-md-9">
                                <button id="btn-signup" type="submit" class="btn btn-info"><i
                                        class="icon-hand-right"></i> &nbsp SORT/SEARCH</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>
<footer>
    <%- include('../partials/footer'); %>
</footer>