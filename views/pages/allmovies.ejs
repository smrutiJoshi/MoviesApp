<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
    <meta charset="UTF-8">
    <title></title>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
   
</head>
<header>
   
    <%- include('../partials/header'); %>
</header>

<body>
    <form class="form-horizontal" role="form" method="get" action="filter" enctype="multipart/form-data">
        <div class="container">
            <div class="row">
                <% for (var i = 0; i < movies.length; i++) { %>
                <div class="col-md-4">
                    <div class="thumbnail">
                        <img src="http://localhost:3000/images/upload_images/<%=movies[i].image%>">
                        <div class="caption">
                            <h3>Title : <%= movies[i].title %></h3>
                            <h3>Description : <%= movies[i].description %></h3>
                            <h3>Duration : <%= movies[i].mlength %></h3>
                            <h3>Release Date : <%= movies[i].releasedt %></h3>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
            <% if (pages >= 0) {  %>
            <ul class="pagination text-center">
                <% if (current == 0) { %>
                <li class="disabled"><a>First</a></li>
                <% } else { %>
                <li><a href="/filter/?page=<%0%>&cat=<%= category %>">First</a></li>
                <% } %>
                <% var i = (Number(current) > 5 ? Number(current) - 4 : 0) %>
                <% if (i !== 0) { %>
                <li class="disabled"><a>...</a></li>
                <% } %>
                <% for (; i <= (Number(current) + 4) && pages > i; i++) { %>
                <% if (i == current) { %>
                <li class="active"><a><%= i %></a></li>
                <% } else { %>
                <li><a href="/filter/?page=<%= i %>&cat=<%= category %>"><%= i %></a></li>
                <% } %>
                <% if (i == Number(current) + 4 && i < (pages-1)) { %>
                <li class="disabled"><a>...</a></li>
                <% } %>
                <% } %>
                <% if (current == (pages-1)) { %>
                <li class="disabled"><a>Last</a></li>
                <% } else { %>
                <li><a href="/filter/?page=<%= pages-1 %>&cat=<%-category%>">Last</a></li>
                <% } %>
            </ul>
            
            <% } %>
        </div>
    </form>
</body>
<footer>
    <%- include('../partials/footer'); %>
</footer>
</html>